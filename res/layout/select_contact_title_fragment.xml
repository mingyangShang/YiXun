         <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/title_contact"
            android:layout_height="30dp"
            android:layout_width="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/receive_bg"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/title_discussion"
            android:layout_height="30dp"
            android:layout_width="50dp"
            android:layout_toLeftOf="@+id/title_contact"
            android:layout_alignBaseline="@+id/title_contact"
            android:layout_centerVertical="true"
            android:src="@drawable/receive_bg"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/title_group"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/title_contact"
            android:layout_alignBaseline="@+id/title_contact"
            android:layout_centerVertical="true"
            android:src="@drawable/receive_bg"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
    <ImageView 
        android:id="@+id/ok_select"
         android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/delete"  />

</LinearLayout>