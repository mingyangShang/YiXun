<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/contactitem_catalog_select"
        style="@style/MMListCatalog"
        android:text=""
        android:layout_height="wrap_content"
        android:paddingRight="4.0dip" />
           <RelativeLayout
		          android:padding="10dip"
		          android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:id="@+id/head_contact_select"
		              android:layout_alignParentLeft="true" 
		              android:layout_width="50dip"
	              	  android:layout_height="50dip"
	              	  android:src="@drawable/icon"
	              	  android:scaleType="fitCenter"
		              />
		          <LinearLayout 
		              android:id="@+id/l2"
		              android:layout_alignParentRight="true" 
		              android:paddingRight="10dp"
			          android:orientation="vertical" 
			          android:layout_centerInParent="true"
			          android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		          >

		              <CheckBox
		                  android:id="@+id/check_select"
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  
		                  android:gravity="center" />
			          
			              />
		          </LinearLayout>
		          <LinearLayout 
			          android:orientation="vertical" 
			          android:layout_toLeftOf="@id/l2"
			          android:layout_toRightOf="@id/head_contact_select"
			          android:paddingLeft="8dip"
			          android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		          >
			          <TextView
			              android:id="@+id/name_contact_select"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:layout_weight="1"
		              	  android:text="肖秀"
		              	  android:padding="2dip"
		              	  android:textSize="15dip"
		              	  android:singleLine="true"
		              	  android:gravity="center"
		              	  android:textColor="@color/black"
			              />
			          <TextView
			              android:id="@+id/message_contact_select"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:padding="2dip"
		              	  android:text="这是唯一一个正常的朋友"
		              	  android:textSize="14dip"
		              	  android:layout_weight="1"
		              	  android:singleLine="true"
		              	  android:gravity="center"
		              	  android:textColor="@color/gray"
			              />
		          </LinearLayout>
		      </RelativeLayout>
		      
</LinearLayout>

